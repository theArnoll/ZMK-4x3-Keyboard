#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

&kscan0 {
    debounce-press-ms = <3>;
    debounce-release-ms = <3>;
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            // -------------------------------------
            // |     Z     |     M     |     K     |
            // |     A     |     B     |     C     |
            // |     D     |     E     |     F     |
            bindings = <
                &kp R    &kp 2    &kp 3
                &kp T    &kp 5    &kp G
                &kp U    &kp 8    &kp J
                &kp I    &kp 0    &studio_unlock
            >;
        };
    };
 };